<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" style="@style/appWindow"
	android:background="@android:color/white" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:id="@+id/textField" android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		style="@style/textviewWhite" android:text="@string/search_instructions"
		android:textColor="@android:color/black" android:textSize="20sp"
		android:linksClickable="true" android:autoLink="web"
		android:background="@android:color/white" android:clickable="true" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:layout_marginTop="2dp"/>
	<TextView android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		style="@style/textviewWhite" android:text="@string/search_instructions1" 
		android:textColor="@android:color/black" android:textSize="20sp"
		android:linksClickable="true" android:autoLink="web"
		android:background="@android:color/white" android:layout_marginLeft="2dp"
		android:layout_marginRight="2dp" android:layout_marginTop="2dp"
		android:clickable="true" android:id="@+id/tvInstallNew"/>
	<TextView android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		style="@style/textviewWhite" android:text="@string/search_instructions2"
		android:textColor="@android:color/black" android:textSize="20sp"
		android:linksClickable="true" android:autoLink="web"
		android:background="@android:color/white" android:layout_marginLeft="2dp"
		android:layout_marginRight="2dp" android:layout_marginTop="2dp"
		android:clickable="true" android:id="@+id/tvUninstallOld"/>

	<ListView android:id="@+id/list" style="@style/appListview"
		android:layout_width="fill_parent" android:layout_weight="2.5" android:layout_height="wrap_content"/>
</LinearLayout>


